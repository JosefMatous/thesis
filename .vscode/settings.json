{
    "latex-workshop.latex.recipes": [
        {
            "name": "thesis",
            "tools": [
                "pdflatex",
                "biber",
                "glossaries",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "thesis"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "thesis"
            ],
            "env": {}
        },
        {
            "name": "glossaries",
            "command": "makeglossaries",
            "args": [
                "thesis"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipe.default": "thesis",
    "latex-workshop.latex.autoBuild.run": "onSave"
}